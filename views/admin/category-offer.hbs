<section>
    <div class="container">
        <div class="row">
            <div class="cat-offer col-lg-4">
                <h3 style="padding: 10px;">Category Offer</h3>
                <form action="/admin/categoryOffer" method="post">
                    <label>category</label>
                    <select class="form-select" id="category" name="category" aria-label="Default select example">
                        <option selected>Open this select menu</option>
                        {{#each categories}}
                        <option value="{{this.category}}">{{this.category}}</option>
                        {{/each}}
                    </select>
                    <br>
                    <label for="startingDate">starting Date</label>
                    <br>
                    <input type="Date" name="startingDate" id="startingDate" placeholder="enter starting Date">

                    <br>
                    <label for="expiry">expiry Date</label>
                    <br>
                    <input type="Date" name="expiry" id="expiry">
                    <br>
                    <label for="">offer Percentage</label>
                    <br>
                    <input type="number" id="offerPercentage" name="offerPercentage" min="1" max="99" placeholder="%">
                    <br>
                    <input type="submit" id="off-submit" value="submit">

                </form>
            </div>

            <div class="col-xl-8 col-lg-8 mb-4 col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">category offers</h6>

                    </div>
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th>category</th>
                                    <th>starting Date</th>
                                    <th>Expiry Date</th>
                                    <th>Percentage</th>
                                    <th>option</th>

                                </tr>
                            </thead>
                            <tbody>
                                {{#each catOffer}}
                                <tr>
                                    <td>{{this.category}}</td>
                                    <td>{{this.startingDate}}</td>
                                    <td>{{this.expiry}}</td>
                                    <td>{{this.offerPercentage}} %</td>
                                    <td><a href="/admin/deleteCatOffer/{{this._id}}"><span
                                                class="material-icons">delete</span></a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
        </div>
    </div>
</section>