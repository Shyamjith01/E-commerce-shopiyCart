  <div class="col-lg-6 mt-3">
    <h5 class="ml-3">Add New Brand</h5>

    <form action="/admin/addBrand" method="post" enctype="multipart/form-data">
      <div class="form-row col-12" style="display: flex;flex-direction: row;">
        <div class="col-lg-12">
          <label for="">Brand name</label>
          <input type="text" class="form-control" placeholder="Enter Brand name" name="brandName">

        </div>

        <div class="custom-file col-lg-12" style="margin-top: 2rem;">

          <input type="file" class="custom-file-input" id="customFile" class="mt-1" id="image" name="image">
          <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
      </div>
