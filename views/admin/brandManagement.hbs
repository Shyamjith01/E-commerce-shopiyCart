<div class="flex">
  <div class="col-xl-6 col-lg-6 mb-4 col-md-12 col-sm-12">
    <div class="card">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">All Orders</h6>

      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush">
          <thead class="thead-light">
            <tr>
              <th>No.</th>
              <th>Brand image</th>
              <th>Brand name</th>
              <th>Options</th>

            </tr>
          </thead>
          <tbody>
            {{#each brand}}
            <tr>
              <td data-th="Movie Title">{{@index}}</td>
              <td data-th="Genre"><img src="/brand-images/{{this._id}}.jpg" alt="" style="width: 5rem;"></td>
              <td data-th="Year">{{this.brandName}}</td>
              <td data-th="Gross"><a href="/admin/deleteBrand/{{this._id}}"><button type="button"
                    class="btn btn-danger">Delete</button></a></td>
            </tr>
            {{/each}}

          </tbody>
        </table>
      </div>
      <div class="card-footer"></div>
    </div>
  </div>
