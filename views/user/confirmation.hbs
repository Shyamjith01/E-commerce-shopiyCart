<!--================Order Details Area =================-->
<section class="order_details section_gap" style="margin-top: 7rem;">
	<div class="container">
		<div style="margin-left: auto;margin-right: auto;width: fit-content;">
			<img src="/succces/succes.png" alt=""
				style="width: 10rem;width: 17rem;margin-top: -7rem;margin-bottom: -2rem;">
		</div>
		<h3 class="title_confirmation">Thank you. Your order has been received.</h3>
		<div class="row order_d_inner">
			{{#each orders}}
			<div class="col-lg-4">
				<div class="details_item">
					<h4>Order Info</h4>
					<ul class="list">
						<li><a href="#"><span>Order number</span> : 60236</a></li>
						<li><a href="#"><span>Date</span> : {{this.Date}}</a></li>
						<li><a href="#"><span>Total</span> : ₹{{this.totalAmount}}</a></li>
						<li><a href="#"><span>Payment method</span> : {{this.paymentMethod}}</a></li>
					</ul>
				</div>
			</div>


			<div class="col-lg-5">
				<div class="details_item">
					<h4>Shipping Address</h4>
					<ul class="list">
						<li><a href="#"><span>Street</span> : {{this.deliveryDetails.adress2}}</a></li>
						<li><a href="#"><span>City</span> : {{this.deliveryDetails.adress1}}</a></li>
						<li><a href="#"><span>Country</span> : India</a></li>
						<li><a href="#"><span>Postcode </span> : {{this.deliveryDetails.pincode}}</a></li>
					</ul>
				</div>
			</div>
			{{/each}}
			{{#each getOrProduct}}
			<div class="col-lg-4">
				<div class="details_item">
					<h4>Order Info</h4>
					<ul class="list">
						<li><a href="#"><span>Order number</span> : 60235</a></li>
						<li><a href="#"><span>Date</span> : {{this.dateIso}}</a></li>
						<li><a href="#"><span>Total</span> :₹ {{this.totalAmount}}</a></li>
						<li><a href="#"><span>Payment method</span> : {{this.paymentMethod}}</a></li>
					</ul>
				</div>
			</div>


			<div class="col-lg-5">
				<div class="details_item">
					<h4>Shipping Address</h4>
					<ul class="list">
						<li><a href="#"><span>Street</span> : {{this.deliveryDetails.adress2}}</a></li>
						<li><a href="#"><span>City</span> : {{this.deliveryDetails.adress1}}</a></li>
						<li><a href="#"><span>Country</span> : India</a></li>
						<li><a href="#"><span>Postcode </span> : {{this.deliveryDetails.pincode}}</a></li>
					</ul>
				</div>
			</div>
			{{/each}}
		</div>
		<div class="order_details_table">
			<h2>Order Details</h2>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Product</th>
							<th scope="col">Quantity</th>
							<th scope="col">Total</th>
						</tr>
					</thead>
					<tbody>
						{{#if buyNow}}
						<tr>
							<td>
								<p>{{Products.proName}}</p>
							</td>
							<td>
								<h5>x 1</h5>
							</td>
							<td>
								<p>₹{{Products.price}}.00</p>
							</td>
						</tr>
						{{/if}}

						{{#if cart}}
						{{#each Products}}
						<tr>
							<td>
								<p>{{this.product.proName}}</p>
							</td>
							<td>
								<h5>x {{this.quantity}}</h5>
							</td>
							<td>
								<p>₹{{this.product.price}}.00</p>
							</td>
						</tr>
						{{/each}}

						{{/if}}



						<tr>
							<td>
								<h4>Subtotal</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								{{#each orders}}
								<p>₹{{this.totalAmount}}.00</p>
								{{/each}}
							</td>
						</tr>

						<tr>
							<td>
								<h4>Total</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								{{#each orders}}
								<p>₹{{this.totalAmount}}.00</p>
								{{/each}}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>
<!--================End Order Details Area =================-->