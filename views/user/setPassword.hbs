	<section class="login_box_area section_gap mt-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="/images/login.jpg" alt="">
						<div class="hover">
							<h4>New to our website?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
							<a class="primary-btn" href="/signup">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Create New Password</h3>
						{{#if notSame}}
                        <h6 style="color: red;">password not same</h6>
                        {{/if}}
						<form class="row login_form" action="/setPassword" method="post" id="contactForm" >
							<div class="col-md-12 form-group">
								<input type="number" class="form-control" id="password1" name="password1" placeholder="Enter password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'enter password'" >
							</div>
							<div class="col-md-12 form-group">
								<input type="number" class="form-control" id="password2" name="password2" placeholder="Re-enter password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Re-enter password'" >
							</div>
							<div class="col-md-12 form-group">
								<div class="creat_account">
									<input type="checkbox" id="f-option2" name="selector">
									<label for="f-option2">Keep me logged in</label>
								</div>
							</div>
							<div class="col-md-12 form-group">
								<button type="submit" value="submit" class="primary-btn">Submit</button> <br>
								<div>
									<a href="/otpForm"   class=" ml-1" style="margin-top: 1em !important;">Login -with OTP</a>
								</div>
								
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>