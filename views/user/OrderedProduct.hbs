                                <button class="ti-bag" onclick="addToCart('{{this._id}}')"></button>
                                <p class="hover-text">add to bag</p>
                            </a>
                            <a href="/add-to-wish/{{this._id}}" class="social-info">
                                <span class="lnr lnr-heart"></span>
                                <p class="hover-text">Wishlist</p>
                            </a>


                        </div> --}}
                    </div>

                </div>

            </div>
            {{/each}}
            <!-- single product -->

        </div>
    </section>
</div>